{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Python Script",
			"type": "shell",
			"command": "python",
			"args": [
				{
					"quoting": "escape",
					"value": "${file}",
					"cwd": "${workspaceFolder}"
				}
			],
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"detail": "Runs the current script.",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}